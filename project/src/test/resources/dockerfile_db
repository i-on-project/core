FROM postgres:13-alpine

USER postgres
COPY ./res/docker/sql/create-schema.sql /docker-entrypoint-initdb.d/1_create.sql
COPY ./res/docker/sql/insert.sql /docker-entrypoint-initdb.d/2_insert.sql
COPY ./res/docker/sql/tokens.sql /docker-entrypoint-initdb.d/3_tokens.sql
COPY ./res/docker/sql/strip-privileges.sql /docker-entrypoint-initdb.d/4_priv.sql

EXPOSE 5432

